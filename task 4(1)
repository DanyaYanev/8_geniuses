# нахождение минимального из 3 чисел
print("введите число a:")   # ввод чисел
a = int(input())
print("введите число b:")
b = int(input())
print("введите число c:")
c = int(input())
if a > b < c:    # сравнение чисел
    print("ответ" + str(b))
elif c > a < b:
    print("ответ" + str(a))
else:
    print("ответ" + str(c))
    
    
# Вычисление количества цифр числа
print("введите число:")
number = int(input())
quantity = 0
while number > 0:
    number = number // 10
    quantity = quantity + 1
print("Количество цифр равно:" + str(quantity))



# Сумма чисел от 1 до N
print("введите конечное число:")
number = int(input())
amount = 0
for i in range(1, number + 1):
    amount = amount + i
print("Ответ:" + str(amount))




# факториал натурального числа N
print("введите число:")
number = int(input())
factorial = 1
for i in range(1, number + 1):
    factorial = factorial * i
print("Ответ:" + str(factorial))



