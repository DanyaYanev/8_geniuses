#2

num = float(input('Введите число для сравнения: '))
for i in range(3):
    new_num = float(input('Введите число: '))
    if num != new_num:
        print('НЕ РАВНО')
        exit()
    elif num == new_num:
        print('Равно')

#3

import random
k = int(input())
n = 30
c = [0] * n
for i in range(n):
    c[i] = random.randint(1, 100)
print(c)
print(sorted(c, reverse=True)[:k])

