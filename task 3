exi = 1   # цикл для завершения или продолжения программы
while exi != 0:    # цикл для завершения или продолжения программы
    i = 0          # переменная количества повторения цикла
    positiveamount = 0   # сумма положительных чисел
    negativeamount = 0   # сумма отрицательных чисел
    for i in range(15):  # открытие цикла
        print("введите число (отличное от нуля):")  # ввод чисел
        number = int(input())   # ввод чисел
        if number == 0:  # проверка числа на отличие от нуля
            print("не верное число, введите 15 чисел заново ")  # вывод ошибки
        if number > 0:   # проверка числа на отрицательность или положительность
            positiveamount = positiveamount + number  # Суммирование положительных чисел
        else:
            negativeamount = negativeamount + number  # Суммирование положительных чисел
    print("сумма положительных чисел:" + str(positiveamount))  # вывод суммы положительных чисел
    print("сумма отрицательных чисел:" + str(negativeamount))  # вывод суммы отрицательных чисел
    print("Для закрытия программы введите 0, для продолжения любую цифру отличную от нуля")  
    exi = int(input())  # завершение или продолжение программы
