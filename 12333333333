using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace game
{
    internal class game
    {
        static void Main(string[] args)
        {                       // ввод переменных
            int i = 3;
            int k = 0;
            int vvedennoe, zadanie;
            double h1, h2, a1, a2, proc1, proc2, damage1, damage2, rdamage1, rdamage2;
            int password = 1234;
            Random rand = new Random();
            do                              // создание пароля для входа в игру с 3 попытками ввода
            {

                Console.WriteLine("Логин: Голодные игры");
                Console.Write("Пароль: ");
                vvedennoe = int.Parse(Console.ReadLine());
                if (password == vvedennoe)
                {
                    Console.WriteLine("Вход выполнен");
                    break;
                }
                else
                {
                    i--;
                    Console.WriteLine($"Неверный пароль, осталось попыткок: {i}");
                }
            }
            while (i != 0);
            if (i == 0)
                Environment.Exit(0);                // выход 
            Console.WriteLine("Выберите задание на 3 или на 4");
            Console.Write("Задание: ");
            zadanie = int.Parse(Console.ReadLine());      // создание кейсов
            switch (zadanie)
            {
                case 3:                                // задание на 3
                    Console.Write("здоровьe гладиатора: ");
                    h1 = double.Parse(Console.ReadLine());
                    if (h1 > 100 || h1 <= 0)            // проверка здоровья на диапазон 
                    {
                        Console.WriteLine("Значение не подходит, Здоровье может быть только от 1 до 100");
                        Environment.Exit(0);                    // выход 
                    }
                    Console.Write("Броня гладиатора: ");
                    a1 = double.Parse(Console.ReadLine());
                    if (a1 > 100 || a1 <= 0)              // проверка брони на диапозон
                    {
                        Console.WriteLine("Значение не подходит, броня может быть только от 1 до 100");
                        Environment.Exit(0);                    // выход 
                    }
                    proc1 = a1 / 5;                        // 20 процентов от числа
                    damage1 = rand.Next(1, 100);
                    rdamage1 = damage1 * (1 - proc1 / 100); // формула для брони
                    Console.WriteLine($"Урон по гладиатору: {Math.Round(rdamage1, 0)}");
                    if (h1 < rdamage1)
                        Console.WriteLine($"Здоровье гладиатора: 0") ;// проверка на то, чтобы здоровье было больше 0

                    else
                        Console.WriteLine($"Здоровье гладиатора: {Math.Round(h1 - rdamage1, 0)}"); // округление 
                    break;
                case 4:                                             // задание на 4
                    h1 = rand.Next(1, 100);
                    Console.WriteLine($"Здоровье первого гладиатора: {h1}");      // случайные числа от 1 до 100
                    h2 = rand.Next(1, 100);
                    Console.WriteLine($"Здоровье второго гладиатора: {h2}");
                    a1 = rand.Next(1, 100);
                    Console.WriteLine($"Броня первого гладиатора: {a1}");
                    a2 = rand.Next(1, 100);
                    Console.WriteLine($"Броня второго гладиатора: {a2}");
                    damage1 = rand.Next(1, 100);
                    proc1 = a1 / 5;                                     
                    rdamage1 = damage1 * (1 - proc1 / 100);             // формула брони
                    h1 = h1 - rdamage1;
                    Console.WriteLine($"Урон по первому гладиатору: {Math.Round(rdamage1, 0)}");         // округление урона
                    damage2 = rand.Next(1, 100);
                    proc2 = a2 / 5;
                    rdamage2 = damage2 * (1 - proc2 / 100);
                    h2 = h2 - rdamage2;
                    Console.WriteLine($"Урон по второму гладиатору: {Math.Round(rdamage2, 0)}");                // вывод здоровья первого и второго гладиаторов 
                    if (h1 > 0 && h2 > 0)
                    {
                        Console.WriteLine($"Оба гладиатора выжили, у первого гладиатора осталось {Math.Round(h1, 0)} Здоровья, у второго гладиатора осталось {Math.Round(h2, 0)} Здоровья");
                        break;
                    }
                    if (h1 > 0 && h1 > h2)
                        Console.WriteLine($"У первый гладиатора, осталось {Math.Round(h1, 0)} Здоровья, а второй вылетел с игры");
                    else if (h2 > 0 && h2 > h1)
                        Console.WriteLine($"У второго гладиатора, осталось {Math.Round(h2, 0)} Здоровья, а первый вылетел с игры");
                    else
                        Console.WriteLine($"Оба гладиатора вылетели с игры");
                    break;

            }

            }
        }
    }
